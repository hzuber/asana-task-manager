{
	"name": "AsanaDaily", 
	"version": "1.0",
	"manifest_version": 2, 
	"description": "A Chrome extension that allows you to keep track of the Asana tasks you've worked on today.",
	"permissions": ["tabs", "*://*.asana.com/*", "storage"],
	"background": {
		"scripts": ["background.js"], 
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["asanaTasks.js"]
		}
	],
	"browser_action": {
		"default_popup": "popup.html",
		"default_title": "AsanaDaily"
	}
}